vino=#65140F
azul=#26bce0
row = #DEEFFF
div.buttonHide
    position absolute
    top 15px
    left 217px
    background-color vino
    z-index 61
    border-radius: 50%;
    height: 25px;
    width: 25px;
    text-align: center
    p
        text-align: center
        padding: 2px
        i
            color white
table.principal
    thead
        background-color vino !important
        color white
        th
            cursor pointer
            position relative
            &#idVolante
                display: none
            div.thText
                i
                    margin-left 5px
                    font-size 15px


    tbody
        tr:hover
            border-color vino !important
            box-shadow: 5px 5px 3px grey !important
            background-color: row
        td#idVolante
            display: none
a#addRegister
    color white !important
form
    padding: 8px
    input[type="text"]:focus
        border-color: azul !important
    div.send
        button
            margin-left: 15px
small
    color red !important
.inputError
    border-color red !important
p.error
    color red


div#headerText
    cursor pointer
    i
        margin-left 8px
        font-size: 15px !important

form#Volantes
        label
            display: block !important